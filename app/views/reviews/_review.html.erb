<div class="review border rounded p-2 mb-2 bg-light">
  <div class="d-flex justify-content-between align-items-start">
    <div>
      <% if review.rating.present? %>
        <strong class="text-warning"><%= review.rating %> <i class="fa fa-star" aria-hidden="true"></i></strong>
      <% end %>
      <small class="text-muted ms-2">â€¢ <%= time_ago_in_words(review.created_at) %> ago</small>
    </div>
    <div>
      <%= link_to "Delete", list_review_path(review.list, review), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
    </div>
  </div>
  <div class="mt-2"><%= simple_format(review.body) %></div>
</div>
